# Get user input function
#def get_user_input( ):
a=input('-1 for default: ')
b=input('-1 for default: ')
c=input('-1 for default:')
if a=='-1':
print('Hello, Dude!',end=' ')
else:
print(f"Hello, {a}!",end=' ')
if b=='-1':
print('You are 0 years old',end=' ')
else:
print(f'You are {b} years old',end=' ')
if c=='-1':
print("and you are from Space")
else:
print(f"and you are from {c}")
